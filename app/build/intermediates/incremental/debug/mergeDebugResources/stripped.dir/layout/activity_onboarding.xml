<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#088579">

    <!-- Shape with rounded corners -->
    <ImageView
        android:id="@+id/onboardingImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/onboarding_image"
        android:scaleType="centerCrop"
        android:src="@drawable/onboarding_photo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="451dp"
        android:layout_below="@+id/onboardingImage"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/rounded_corner_background">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/logo_photo" />

        <!-- Title of the App -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/app_name"
            android:textColor="#092C52"
            android:textSize="18sp" />

        <!-- App Description -->
        <TextView
            android:id="@+id/appDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/app_motto"
            android:textColor="#092C52"
            android:textSize="14sp" />

        <!-- Login Button -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/appDescription"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#088579"
            android:text="@string/login" />

        <!-- Register Button -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:backgroundTint="#088579"
            android:text="@string/register" />

        <!-- Version of the App -->
        <TextView
            android:id="@+id/appVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/registerButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/app_version_1_0"
            android:textColor="#092C52"
            android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>